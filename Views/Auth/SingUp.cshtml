@model TodoApp.Models.ViewModels.SingUpViewModel?

@{
    ViewBag.Title = "SingUp";
    Layout = "_Layout";
}

@if (Model is not null && Model.SingUpResult.HasValue)
{
    <span class="badge text-danger">@Model.SingUpResult.Value.ErrorMessage</span>
}

<div class="container-sm">
    <div class="w-75 bg-dark px-3 rounded-2 mx-auto my-auto">
        <form asp-action="SingUp" asp-controller="Auth" class="d-flex flex-column text-white justify-content-center align-content-center pt-5 px-5">
            <h3 class="text-center">Sing Up</h3>
            <p class="text-center">Please Create your account</p>
            <input class="form-control mb-2" asp-for="FullName" type="text" id="FullName" placeholder="Full Name">
            <span class="text-danger" asp-validation-for="FullName"></span>
            <input class="form-control mb-2" asp-for="UserName" type="text" id="UserName" placeholder="UserName">
            <span class="text-danger" asp-validation-for="UserName"></span>
            <input class="form-control mb-2" asp-for="Password" type="password" id="Password" placeholder="Password">
            <span class="text-danger" asp-validation-for="Password"></span>
            <input class="form-control mb-2" asp-for="ConfirmPassword" type="password" id="ConfirmPassword" placeholder="Confirm Password">
            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
            <a class="link-danger d-block mt-4 text-center btn">Forgor Password?</a>
            <a class="link-danger d-block text-center btn">Demo It</a>
            <button class="btn-outline-light btn my-3" type="submit">LogIn</button>
        </form>
    </div>
</div>